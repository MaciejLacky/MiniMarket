                    <ImageBrush ImageSource="graphh.png">
                        <ImageBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleX="0.8" ScaleY="0.6"/>
                                <SkewTransform CenterY="0.5" CenterX="0.5"/>
